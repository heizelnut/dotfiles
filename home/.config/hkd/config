- shift, printscr : screenshot
- printscr : screenshot -f

- ctrl, printscr : screenrec
- ctrl, shift, printscr : screenrec -s

- volumedown : vol down
- volumeup : vol up
- mute : vol mute

- brightnessup : lum up
- brightnessdown : lum down

- leftctrl, comma : emoji

- playpause : playerctl play-pause
- previoussong : playerctl previous
- nextsong : playerctl next

- shift, volumeup : playerctl volume 0.05+
- shift, volumedown : playerctl volume 0.05-

- ctrl, f8 : networkmanager_dmenu -l 30
- ctrl, f10 : $TERMINAL -e ncmpcpp
- ctrl, f11 : $TERMINAL -e news
- ctrl, f12 : $BROWSER

- rightalt, f10 : playerctl play-pause
- rightalt, f11 : playerctl previous
- rightalt, f12 : playerctl next

- leftmeta, esc : shutmenu
- leftmeta, minus : dunstctl close
- leftmeta, space : wofi --show drun
- leftmeta, l : lock 

