# screenshot
super + shift s
	screenshot

super + s
	screenshot -f

# monitor toggle
XF86TouchpadToggle
	monitor

# screencast
super + shift r
	screenrec
super + r
	screenrec -f
ctrl + super + r
	screenrec -s

# open links in mpv
ctrl + shift o
	mpvopen

# volume controls
XF86AudioMute
	vol mute

XF86AudioLowerVolume
	vol down

XF86AudioRaiseVolume
	vol up 

# brightness control
XF86MonBrightnessUp
	lum up

XF86MonBrightnessDown
	lum down

# emoji
XF86Calculator
	emoji

# music
XF86AudioPlay
	mpc toggle

XF86AudioPrev
	mpc prev

XF86AudioNext
	mpc next

shift XF86AudioRaiseVolume
	music up

shift XF86AudioLowerVolume
	music down

# apps

# browser
super + shift w
	notify-send -t 2000 "Starting browser..." && $BROWSER

# music player
super + shift m
	$TERMINAL -t music -e ncmpcpp

super + shift n
	$TERMINAL -t rss -e neix
