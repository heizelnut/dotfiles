# screenshot
alt + shift s
	screenshot

alt + s
	screenshot -f

# volume controls
XF86AudioMute
	vol mute

XF86AudioLowerVolume
	vol down

XF86AudioRaiseVolume
	vol up 

# brightness control
XF86MonBrightnessUp
	lum up

XF86MonBrightnessDown
	lum down

# emoji
ctrl + comma
	emoji

# music
XF86AudioPlay
	mpc toggle

XF86AudioPrev
	mpc prev

XF86AudioNext
	mpc next

shift XF86AudioRaiseVolume
	music up

shift XF86AudioLowerVolume
	music down

# apps

# browser
alt + shift w
	notify-send -u LOW -t 2000 "Starting browser..." && /bin/qutebrowser

# music player
alt + shift m
	alacritty -e "ncmpcpp"

