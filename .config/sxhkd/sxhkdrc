# screenshot
alt + shift s
	scrot -a $(slop -c 0.9,0.9,0.9,0.8 -f '%x,%y,%w,%h') -o ~/pics/last.png && notify-send "Picture saved!"

# volume controls
XF86AudioMute
	vol mute

XF86AudioLowerVolume
	vol down

XF86AudioRaiseVolume
	vol up 

# brightness control
XF86MonBrightnessUp
	lum up

XF86MonBrightnessDown
	lum down

# emoji
ctrl + comma
	emoji

# music
XF86AudioPlay
	mpc toggle

XF86AudioPrev
	mpc prev

XF86AudioNext
	mpc next

shift XF86AudioRaiseVolume
	mpc volume +5 && dunstify --replace=30 "ðŸŽµ $(mpc volume)"

shift XF86AudioLowerVolume
	mpc volume -5 && dunstify --replace=30 "ðŸŽµ $(mpc volume)"

# apps

# browser
alt + shift w
	notify-send -u LOW -t 2000 "Starting browser..." && /bin/qutebrowser

# music player
alt + shift m
	alacritty -e "ncmpcpp"

