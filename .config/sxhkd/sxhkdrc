# screenshot
alt + shift s
	screenshot

alt + s
	screenshot -f

# screencast
alt + shift r
	screenrec
alt + r
	screenrec -f
ctrl + alt + r
	screenrec -s

# open links in mpv
ctrl + shift o
	mpvopen

# volume controls
XF86AudioMute
	vol mute

XF86AudioLowerVolume
	vol down

XF86AudioRaiseVolume
	vol up 

# brightness control
XF86MonBrightnessUp
	lum up

XF86MonBrightnessDown
	lum down

# emoji
ctrl + comma
	emoji

# music
XF86AudioPlay
	mpc toggle

XF86AudioPrev
	mpc prev

XF86AudioNext
	mpc next

shift XF86AudioRaiseVolume
	music up

shift XF86AudioLowerVolume
	music down

# apps

# browser
alt + shift w
	notify-send -u LOW -t 2000 "Starting browser..." && $BROWSER

# music player
alt + shift m
	$TERMINAL -e ncmpcpp

